{{!-- <h2 style="text-align: center; margin-top: 1rem" class="">Novo Painel:</h2> --}}

<div class="card mt-4">
    <div class="header-novo-painel">
        <h4>Informe os dados do Painel</h4>
    </div>
    <div class="card-body">
        <form action="/admin/paineis/novo" method="POST" class="control-form">
            <label for="codigo"  class="mt-2">Código: </label>
            <label for="cliente" style="margin-left: 98px" class="mt-2">Cliente: </label>
            <label for="descricao" style="margin-left: 198px" class="mt-2">Descrição: </label>
            <label for="montador" style="margin-left: 274px" class="mt-2">Montador: </label><br>
            
                <input type="number" id="codigo" required name="codigo" class="codigo linha1 form-control">
                <select name="cliente" id="" required class="cliente linha1 custom-select">                    
                    <option value="1">Selecione um cliente...</option>
                    {{#each clientes}}
                    <option value="{{_id}}">{{nome}}</option>
                    {{else}}
                    <option value="0">Nenhum cliente registrado...</option>
                    {{/each}}
                </select>
                <input type="text" id="descricao" name="descricao" required class="descricao linha1 form-control">                
                <select name="montador" id="" required class="montador linha1 custom-select">
                    <option value="Montador #1" id="Montador #1">Montador #1</option>
                    <option value="Montador #2" id="Montador #2">Montador #2</option>
                    <option value="Montador #3" id="Montador #3">Montador #3</option>
                </select><br>

            {{!-- Linha2 --}}
            <label for="num_pedido" class="mt-4">Nº Pedido: </label>
            <label for="ordem" style="margin-left: 76px;" class="mt-2">Ordem de compra: </label>
            <label for="dt_pedido" style="margin-left: 34px;">Data pedido:</label>
            <label for="dt_previsao" style="margin-left: 107px;">Data previsão:</label>
            <label for="valor" style="margin-left: 94px;">Valor: </label><br>
            
                <input type="number" id="num_pedido" name="num_pedido" required class="num_pedido linha2 form-control">
                <input type="text" id="ordem" name="ordem" required class="linha2 ordem form-control">
                <input type="text" id="dt_pedido" name="dt_pedido" value="{{formatada}}" required placeholder="dd-mm-yyyy" class="linha2 dt_pedido form-control">
                <input type="text" id="dt_previsao" name="dt_previsao" value="{{formatadaMes}}" required placeholder="dd-mm-yyyy" class="linha2 dt_previsao form-control">
                <input type="number" id="valolr" name="valor" required class="linha2 valor form-control">
                <br>
                <label for="observacao">Observações:</label>
                    <textarea name="observacao" id="" cols="30" rows="10" class="form-control"></textarea>
            
            <button type="submit" class="btn btn-success mt-4">Cadastrar novo painel</button>
        </form>
            <a href="/admin/paineis" style=""><button class="btn btn-danger mt-4"> < Voltar</button></a>

    </div>
</div>